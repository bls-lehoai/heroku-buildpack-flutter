#!/bin/sh

function print() {
  echo "-----> $1"
}

BUILD_DIR=${1:-}
# If the FLUTTER_CLEANUP is in false, or in true.
if [ -d $BUILD_DIR/build/web ]; then
    DEPLOY_DIR="/app/build/web/"
else
    DEPLOY_DIR="/app/"
fi

HEROKU_PORT="$PORT"
print "start on port"
print HEROKU_PORT
cat <<EOF
---
default_process_types:
    web: /app/dart-sdk/bin/dart pub global run dhttpd --host 0.0.0.0 --port 12341 --path ${DEPLOY_DIR}

EOF
